<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--Mapper名称 对应infra中mapper类名-->
<mapper namespace="com.deep.infra.persistence.sql.mapper.RoleMapper">
    <insert id="setRoleModel" parameterType="com.deep.domain.model.RoleModel">
        INSERT INTO role(
        id,
        authority,
        gmt_create,
        gmt_modified
        )
        VALUES(
        #{roleModel.id},
        #{roleModel.authority},
        #{roleModel.gmtCreate},
        #{roleModel.gmtModified}
        )
    </insert>
    <select id="getRoleModelByid" parameterType="long" resultType="com.deep.domain.model.RoleModel">
        SELECT
        *
        FROM
        role
        WHERE
        id = #{id}
    </select>

    <resultMap id="role" type="com.deep.domain.model.RoleModel">
        <result property="id" column="id"/>
        <result property="authority" column="authority"/>
        <result property="gmtCreate" column="gmt_create"/>
        <result property="gmtModified" column="gmt_modified"/>
    </resultMap>

    <select id="getAllRoleModel" resultMap="role">
        SELECT
        *
        FROM
        role
    </select>

    <delete id="deleteRoleModelByid" >
        DELETE FROM
        role
        WHERE
        id = #{id}
    </delete>

</mapper>