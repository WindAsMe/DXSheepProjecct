<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.deep.infra.persistence.sql.mapper.UserMapper">
    <!--获取所有成员的信息-->
    <select id="queryAllUser" resultType="com.deep.domain.model.UserModel">
        SELECT *
        FROM user_manage
        ORDER BY id
        DESC
    </select>

    <!--获取单个成员的信息-->
    <select id="queryUserById" resultType="com.deep.domain.model.UserModel">
        SELECT *
        FROM user_manage
        WHERE
        id = #{userId}
    </select>

    <!--插入一个成员信息-->
    <insert id="insertUser" useGeneratedKeys="true" keyProperty="id" keyColumn="id" parameterType="com.deep.domain.model.UserModel">
      INSERT INTO
      user_manage(gmt_create, gmt_modified, pk_userid, user_pwd, user_num, user_pic, user_realname, user_location, user_telephone, user_remark, user_factory, user_role, user_permit, is_extended, is_factory)
      VALUES
      {#{gmtCreate}, #{gmtModified}}
    </insert>

